              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "isHealthy": {
                      "type": "boolean"
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "ok",
                        "warning",
                        "error"
                      ]
                    },
                    "finishedAt": {
                      "type": "string"
                    },
                    "debugInfo": {
                      "type": "object",
                      "properties": {
                        "pid": {
                          "type": "number"
                        },
                        "ppid": {
                          "type": "number"
                        },
                        "uptime": {
                          "type": "number"
                        },
                        "version": {
                          "type": "string"
                        },
                        "platform": {
                          "type": "string"
                        }
                      }
                    },
                    "checks": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "status": {
                            "type": "string",
                            "enum": [
                              "ok",
                              "warning",
                              "error"
                            ]
                          },
                          "finishedAt": {
                            "type": "string"
                          },
                          "isCached": {
                            "type": "boolean"
                          },
                          "name": {
                            "type": "string"
                          },
                          "message": {
                            "type": "string"
                          },
                          "meta": {
                            "type": "object",
                            "properties": {}
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
