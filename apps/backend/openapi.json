{
  "openapi": "3.1.0",
  "info": {
    "title": "Studio 2 Stadium API",
    "version": "1.0.0",
    "description": "Endpoint documentation for the backend. TanStack Query hooks are generated using the openapi specification at `/openapi`"
  },
  "servers": [
    {
      "url": "http://localhost:3333"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthSignupRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthSignupResponse"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": [
          "Authentication"
        ],
        "summary": "Create user account",
        "description": "Creates a new base user account."
      }
    },
    "/auth/login": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthLoginRequest"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "Too Many Requests",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": [
          "Authentication"
        ],
        "summary": "Start user session",
        "description": "Logs in a user and creates a session in Redis."
      }
    },
    "/auth/logout": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthLogoutResponse"
                }
              }
            }
          }
        },
        "tags": [
          "Authentication"
        ],
        "summary": "End user session",
        "description": "Logs out the current user and deletes their session from Redis."
      }
    },
    "/auth/refresh": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthRefreshResponse"
                }
              }
            }
          }
        },
        "tags": [
          "Authentication"
        ],
        "summary": "Refresh user session",
        "description": "Refreshes the current user's session by bumping the Redis version."
      }
    },
    "/auth/session": {
      "get": {
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthSessionResponse"
                }
              }
            }
          }
        },
        "tags": [
          "Authentication"
        ],
        "summary": "Get user session",
        "description": "Retrieves the current session's user information."
      }
    },
    "/auth/test": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthTestResponse"
                }
              }
            }
          }
        },
        "tags": [
          "Authentication"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "properties": {
          "message": {
            "type": "string",
            "description": "Human-readable error message suitable for display"
          },
          "code": {
            "type": "string",
            "description": "Machine-readable error code for programmatic handling",
            "example": "E_BAD_REQUEST"
          },
          "status": {
            "type": "integer",
            "description": "HTTP status code returned by the server",
            "example": 429
          },
          "retryAfter": {
            "type": "integer",
            "description": "Seconds until the request can be retried",
            "example": 60
          },
          "errors": {
            "type": "array",
            "description": "Additional context specific to the error type",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        },
        "required": [
          "message",
          "code",
          "status"
        ]
      },
      "ValidationError": {
        "properties": {
          "field": {
            "type": "string",
            "description": "Validation error field name",
            "example": "email"
          },
          "rule": {
            "type": "string",
            "description": "Validation error rule",
            "example": "required"
          }
        },
        "required": [
          "field",
          "rule"
        ]
      },
      "AccountType": {
        "type": "string",
        "enum": [
          "dancer",
          "school"
        ]
      },
      "PlatformName": {
        "type": "string",
        "enum": [
          "core",
          "prodigy"
        ]
      },
      "HealthResponse": {
        "type": "object",
        "properties": {
          "isHealthy": {
            "type": "boolean"
          },
          "status": {
            "type": "string",
            "enum": [
              "ok",
              "warning",
              "error"
            ]
          },
          "finishedAt": {
            "type": "string"
          },
          "debugInfo": {
            "type": "object",
            "properties": {
              "pid": {
                "type": "number"
              },
              "ppid": {
                "type": "number"
              },
              "uptime": {
                "type": "number"
              },
              "version": {
                "type": "string"
              },
              "platform": {
                "type": "string"
              }
            },
            "required": [
              "pid",
              "uptime",
              "version",
              "platform"
            ]
          },
          "checks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": [
                    "ok",
                    "warning",
                    "error"
                  ]
                },
                "finishedAt": {
                  "type": "string"
                },
                "isCached": {
                  "type": "boolean"
                },
                "name": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "meta": {
                  "type": "object",
                  "properties": {}
                }
              },
              "required": [
                "status",
                "finishedAt",
                "isCached",
                "name",
                "message"
              ]
            }
          }
        },
        "required": [
          "isHealthy",
          "status",
          "finishedAt",
          "debugInfo",
          "checks"
        ]
      },
      "AuthSignupRequest": {
        "type": "object",
        "properties": {
          "phone": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "accountType": {
            "$ref": "#/components/schemas/AccountType"
          },
          "confirmPassword": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "termsChecked": {
            "type": "boolean"
          }
        },
        "required": [
          "email",
          "password",
          "accountType",
          "confirmPassword",
          "username",
          "firstName",
          "lastName",
          "termsChecked"
        ]
      },
      "AuthSignupResponse": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "phone": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "id": {
            "type": "string"
          },
          "avatar": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "displayEmail": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": [
          "email",
          "username",
          "firstName",
          "lastName",
          "phone",
          "id",
          "avatar",
          "displayEmail",
          "createdAt",
          "updatedAt"
        ]
      },
      "AuthLoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AuthLogoutResponse": {
        "type": "object",
        "properties": {
